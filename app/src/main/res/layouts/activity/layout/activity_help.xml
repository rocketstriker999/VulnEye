                    android:id="@+id/Q1_Expand_Button"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_weight=".1"
                    android:background="@null"
                    android:src="@drawable/vector_down" />
            </LinearLayout>

