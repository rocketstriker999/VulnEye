<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/unit_16dp"
    android:background="@drawable/shape_curved_rectangle"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/unit_16dp">


    <ImageView
        android:layout_width="@dimen/unit_32dp"
        android:layout_height="@dimen/unit_32dp"
        android:src="@drawable/vector_eye_open_grey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/TV_HOST"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit_16dp"
            android:text="https://www.falanu.com/index.php?id=25"
            android:textColor="@color/blueGrey950"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/TV_HOST_RESPONSECODE"
            style="@style/textNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/unit_16dp"
            android:text="response code : 200"
            android:textColor="@color/orange500"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>